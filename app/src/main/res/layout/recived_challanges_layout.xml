<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:layout_margin="16dp"
    >

    <LinearLayout
        android:weightSum="10"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ChallengerText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:text="Challanger:" />

        <TextView
            android:id="@+id/ChallengeeText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:text="Challangee:" />

        <TextView
            android:id="@+id/DistText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:text="Dist:"/>

        <TextView
            android:id="@+id/TimeText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:text="Time:"/>

        <TextView
            android:id="@+id/WinnerText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:text="Winner:"/>

        <LinearLayout
            android:weightSum="10"
            android:padding="0dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <Button
                android:id="@+id/ShowMap"
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:background="@drawable/roundbuttongrey"
                android:text="@string/show_map"/>

            <Button
                android:id="@+id/Improve"
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:background="@drawable/roundbuttongrey"
                android:layout_marginStart="8dp"
                android:text="Improve" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>